{
    "compilerOptions": {            
      "target": "ES6",                                
      "module": "commonjs",                           
      "lib": [
        "ESNext"
      ],                                   
      "outDir": "./dist",                    
      "strict": true,
      "declaration": true,                                
      "esModuleInterop": true,                        
      "skipLibCheck": true,                          
      "forceConsistentCasingInFileNames": true        
    },
    "include": [
      "src/**/*"
    ]
}